<Window x:Class="MakaoGraphicsRepresentation.Windows.AuthorInfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MakaoGraphicsRepresentation.Windows"
        mc:Ignorable="d"
        Title="Informacje" Height="250" Width="400" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid>
        <Button x:Name="CloseWindowButton" Content="Zamknij" Margin="140,0,140,10" VerticalAlignment="Bottom" Height="25" FontSize="12"
                HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Click="CloseWindowButton_Click"/>
        <TextBlock x:Name="AuthorInfoLabel" VerticalAlignment="Top" Margin="20,20,20,0" Height="150" TextAlignment="Center"
              TextWrapping="WrapWithOverflow"/>
    </Grid>
</Window>
