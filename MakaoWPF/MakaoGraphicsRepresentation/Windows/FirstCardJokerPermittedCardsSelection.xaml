<Window x:Class="MakaoGraphicsRepresentation.Windows.FirstCardJokerPermittedCardsSelection"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MakaoGraphicsRepresentation.Windows"
        mc:Ignorable="d"
        Title="Wybierz kartę" Height="380" Width="480" WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid>
        <ScrollViewer x:Name="PermittedCardsScroolViever" Margin="20,20,20,0" VerticalAlignment="Top"
                      ScrollViewer.CanContentScroll="True" Height="260">
            <WrapPanel x:Name="PermittedCardsWrapPanel"/>
        </ScrollViewer>
        <Button x:Name="ButtonCancel" Content="Anuluj" HorizontalAlignment="Right" Margin="0,0,160,20" Width="70" Height="20"
            VerticalAlignment="Bottom" Click="ButtonCancel_Click"/>
        <Button x:Name="ButtonOK" Content="OK" HorizontalAlignment="Left" Margin="160,0,0,20" Width="70" Height="20"
            VerticalAlignment="Bottom" Click="ButtonOK_Click"/>

    </Grid>
</Window>
