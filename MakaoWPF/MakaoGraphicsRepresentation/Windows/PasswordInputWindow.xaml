<Window x:Class="MakaoGraphicsRepresentation.Windows.PasswordInputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MakaoGraphicsRepresentation.Windows"
        mc:Ignorable="d"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize" Closing="Window_Closing"
        Title="Hasło" Height="190" Width="230">
    <Grid>
        <Label Content="Podaj hasło do pokoju." HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,20,0,0" Height="30" Width="180"
               HorizontalContentAlignment="Center"/>
        <PasswordBox x:Name="PasswordBox" HorizontalAlignment="Left" Margin="20,60,0,0" VerticalAlignment="Top" Width="180" Height="25"
            FontSize="12" VerticalContentAlignment="Center"/>
        <Button x:Name="ConfirmButton" VerticalAlignment="Top" Height="25" Content="OK" Width="120"
            Margin="50,110,0,0" HorizontalAlignment="Left" Click="ConfirmButton_Click"/>
    </Grid>
</Window>
